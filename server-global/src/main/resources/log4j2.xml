<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{ABSOLUTE} %5p [%t]: %m %n"/>
		</Console>
		<Console name="STDERR" target="SYSTEM_ERR">
			<PatternLayout pattern="%d{ABSOLUTE} &lt;%c&gt; %5p [%t]: %m %n"/>
		</Console>
		<RollingRandomAccessFile name="ROLLFILE" fileName="logs/1.log"
	        filePattern="logs/$${date:yyyy-MM}/1-%d{yyyy-MM-dd}-%i.log.gz">
	        <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY" />  
	        <PatternLayout pattern="%d{ABSOLUTE} &lt;%c&gt; %5p [%t]: %m %n" />    
	        <Policies>    
	            <TimeBasedTriggeringPolicy />       
	        </Policies>     
	    </RollingRandomAccessFile> 
	</Appenders>
	<Loggers>
		<!-- Root Logger -->
		<Root level="DEBUG" additivity="false">
			<AppenderRef ref="STDOUT"/>
		</Root>
		<!-- hyrdpf Logger -->
		<Logger name="hyrdpf" level="DEBUG" additivity="false">
			<!-- <AppenderRef ref="STDERR" />-->
			<AppenderRef ref="STDOUT" />	
			<appender-ref ref="ROLLFILE" />
		</Logger>
	</Loggers>
</Configuration>
